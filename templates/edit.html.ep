% layout 'default';
<h1>Edit <%= $id %></h1>
%= form_for save => begin
%= hidden_field id => $id
%= text_area content => $content

%= submit_button "Save"
% end

%= button_to Delete => 'delete'

<hr>
<%= link_to url_for('view', id => $id)->to_abs => begin %>View<% end %>
<%= link_to url_for('list')->to_abs => begin %>List<% end %>
<%= link_to url_for('home')->to_abs => begin %>Home<% end %>
